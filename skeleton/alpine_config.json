{"BASE_IMAGE" : "alpine",
 "BASE_TAG" : "3.18.2",
 "NEED_SPECIAL_TAGS" : {"2" : "edge"},

 "BUILDER_DEFAULT_BINARIES_DIR": "/tmp/runner_root_dir/", 
 "RUNNER_BINARIES_DIR" : "/",

 "BUILD_STAGES" : {
    "heirloom" : {"BUILD_SCRIPT" : "./source_builds/heirloom/build_heirloom.sh",
                  "BUILD_DOCKERFILE_TEMPLATE" : ""
                 },
    "rc" :       {"BUILD_SCRIPT" : "./source_builds/rc/build_rc.sh",
                  "BUILD_DOCKERFILE_TEMPLATE" : ""
                 }
 },

 "COMMANDS" : [
      {"format_string" : "RUN apk add --no-cache {parameters}", 
       "supported_parameters" : ["bash",
                                 "dash",
                                 "fish",
                                 "zsh",
                                 "ion-shell",
                                 "tcsh",
                                 "oksh"
                                ],
       "prefix" : "\\\n    ",
       "separator" : " \\\n    " },
      {"format_string" : "RUN apk add --no-cache --repository=https://dl-cdn.alpinelinux.org/alpine/edge/testing/ {parameters}", 
       "supported_parameters" : ["elvish"],
       "prefix" : " \\\n    ",
       "separator" : "\\\n    " }
      ],

 "COMMANDS_ORDER" : [1, 2, 0]
}